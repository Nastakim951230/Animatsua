<Window x:Class="Анимация.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Анимация"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" >
                    <GradientStop Color="#FFF7BEDF" Offset="1"/>
                    <GradientStop Color="#FFF7F9CF" Offset="0"/>

                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center">
            <TextBlock Name="aktsia" HorizontalAlignment="Center" FontSize="24" FontFamily="Rage Italic">АКЦИЯ</TextBlock>
            <Image Name="img" Source="./hr (1).png" Width="250" Height="200"></Image>

            <Button Width="200" Height="30" Margin="10" BorderThickness="3" Background="#e5ccfc" Click="Reklama_Click" Name="Reklama" FontSize="14" >Заказать</Button>
        </StackPanel>
    </Grid>
</Window>
